{
  "name": "jhaemin.com-next",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm next:dev",
    "dev:legacy": "npm-run-all --parallel gen next:dev",
    "next:dev": "next dev --port 311",
    "gen": "npm-run-all gen:apipaths",
    "gen:apipaths": "node scripts/generate-api-paths.mjs",
    "build": "pnpm typecheck && next build",
    "start": "next start --port 7000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "pm2:start": "if pm2 show jhaemin.com ; then pnpm pm2:stop && pnpm pm2:delete && pnpm pm2:start ; else pm2 start npm --name 'jhaemin.com' -- run start ; fi",
    "pm2:restart": "if pm2 show jhaemin.com ; then pm2 restart jhaemin.com ; else pnpm pm2:start ; fi",
    "pm2:stop": "if pm2 show jhaemin.com ; then pm2 stop jhaemin.com ; else echo 'No pm2 instance for jhaemin.com client' ; fi",
    "pm2:delete": "if pm2 show jhaemin.com ; then pm2 delete jhaemin.com ; else echo 'No pm2 instance for jhaemin.com client' ; fi",
    "update": "git reset --hard && git pull && rm -rf node_modules && pnpm install --frozen-lockfile && pnpm lint && next build && pnpm pm2:restart",
    "dbpush": "prisma db push",
    "prisma:introspect": "prisma introspect",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "axios": "^0.27.2",
    "change-case": "^4.1.2",
    "clsx": "^1.1.1",
    "dayjs": "^1.11.2",
    "framework7-icons-plus": "^1.7.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "marked": "^3.0.7",
    "nanoid": "^3.3.4",
    "next": "13.3.0",
    "next-iron-session": "^4.2.0",
    "nodemailer": "^6.7.5",
    "nprogress": "^0.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "^0.32.0",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/marked": "^3.0.2",
    "@types/nodemailer": "^6.4.4",
    "@types/nprogress": "^0.2.0",
    "@types/react": "18.0.10",
    "autoprefixer": "^10.4.7",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "eslint": "^8.16.0",
    "eslint-config-next": "^13.3.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.14.0",
    "prismap": "^1.2.0",
    "sass": "^1.52.1",
    "typescript": "^4.9.4"
  }
}
