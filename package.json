{
  "name": "jhaemin.com-next",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun next:dev",
    "dev:legacy": "npm-run-all --parallel gen next:dev",
    "next:dev": "next dev --port 311",
    "gen": "npm-run-all gen:apipaths",
    "gen:apipaths": "node scripts/generate-api-paths.mjs",
    "build": "bun typecheck && next build",
    "start": "next start --port 7000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "pm2:start": "if pm2 show jhaemin.com ; then bun pm2:stop && bun pm2:delete && bun pm2:start ; else pm2 start npm --name 'jhaemin.com' -- run start ; fi",
    "pm2:restart": "if pm2 show jhaemin.com ; then pm2 restart jhaemin.com ; else bun pm2:start ; fi",
    "pm2:stop": "if pm2 show jhaemin.com ; then pm2 stop jhaemin.com ; else echo 'No pm2 instance for jhaemin.com client' ; fi",
    "pm2:delete": "if pm2 show jhaemin.com ; then pm2 delete jhaemin.com ; else echo 'No pm2 instance for jhaemin.com client' ; fi",
    "update": "git reset --hard && git pull && rm -rf node_modules && bun install --frozen-lockfile && bun lint && next build && bun pm2:restart",
    "dbpush": "prisma db push",
    "prisma:introspect": "prisma introspect",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@next/third-parties": "^15.0.4",
    "@prisma/client": "^3.14.0",
    "axios": "^1.5.1",
    "change-case": "^4.1.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.10",
    "framework7-icons-plus": "^1.7.0",
    "google-auth-library": "^9.15.0",
    "googleapis": "^144.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "marked": "^3.0.7",
    "motion": "^10.18.0",
    "nanoid": "^5.0.1",
    "next": "15.0.4",
    "next-iron-session": "^4.2.0",
    "nodemailer": "^6.7.5",
    "nprogress": "^0.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "^0.32.6",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.199",
    "@types/marked": "^3.0.2",
    "@types/nodemailer": "^6.4.4",
    "@types/nprogress": "^0.2.1",
    "@types/react": "19.0.1",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.0.4",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.14.0",
    "prismap": "^1.2.0",
    "sass": "^1.82.0",
    "typescript": "^5.7.2"
  }
}
